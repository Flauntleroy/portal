{
  "name": "Portal-RSHAA",
  "version": "2.0.0",
  "description": "Portal SIMRS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "start:chat": "node server.js"
  },
  "author": "IT R",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "basic-ftp": "^5.0.5",
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.2",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.2",
    "mysql2": "^3.6.5",
    "sequelize": "^6.35.2",
    "express": "^4.19.2",
    "socket.io": "^4.7.5",
    "cors": "^2.8.5"
  },
  "build": {
    "appId": "com.siwasta.desktop",
    "productName": "Portal-RSHAA",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "src/**",
      "!**/*.map",
      "!**/*.md",
      "!**/*.sql",
      "!scripts/**",
      "!tests/**",
      "!dist/**",
      "!out/**",
      "!build/**",
      "!electron-cache/**",
      "!uploads/**"
    ],
    "win": {
      "target": [
        { "target": "portable", "arch": ["x64"] },
        { "target": "nsis", "arch": ["x64"] }
      ],
      "icon": "uploads/Icon-IT.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-setup.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraMetadata": {
      "main": "main.js"
    },
    "asar": true,
    "compression": "maximum",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "forceCodeSigning": false,
    "electronDownload": {
      "cache": "./electron-cache"
    }
  }
}
